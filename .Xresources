Xft.rgba:                      rgb
Xft.antialias:                 true
Xft.hinting:                   true
Xft.hintstyle:                 hintfull
Xft.dpi:                       96

rofi.font:                     DejaVu Sans Mono 10
rofi.fg:                       #ffffff
rofi.bg:                       #121212
rofi.bgalt:                    #121212
rofi.bg-urgent:                #fdf6e3
rofi.bc:                       #161616
rofi.fg-active:                #ffffff
rofi.bg-active:                #222222
rofi.fg-urgent:                #dc322f
rofi.hlfg-active:              #ffffff
rofi.hlbg-active:              #222222
rofi.hlbg-urgent:              #dc322f
rofi.hlfg-urgent:              #fdf6e3
rofi.hlfg:                     #ffffff
rofi.hlbg:                     #222222
rofi.separator-style:          solid
rofi.hide-scrollbar:           true

Emacs.font:                    DejaVu Sans Mono-9
Emacs.menuBar:                 off
Emacs.toolBar:                 off
Emacs.verticalScrollBars:      off
